<mvc:View controllerName="HelloWorld.controller.View1" 
	xmlns:html="http://www.w3.org/1999/xhtml" 
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" 
	xmlns="sap.m">
	
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Input 
						value="{/recipient/name}"
					    description="Hello {/recipient/name}"
					    valueLiveUpdate="true"
					    id="inputName"
					    width="60%"/>
					<Button
				      text="Clica ae!"
				      press="onShowHello"/>
				      
				    
            		<mvc:XMLView viewName="HelloWorld.view.InvoiceList"/>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>